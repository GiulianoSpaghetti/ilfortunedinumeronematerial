<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:pages="clr-namespace:ilfortunedinumeronematerial.Pages"
			 xmlns:viewModels="clr-namespace:ilfortunedinumeronematerial.ViewModels"
             x:Class="ilfortunedinumeronematerial.Pages.HomePage"
			 x:DataType="pages:HomePage">
<StackPanel>
		<TextBox TextWrapping="Wrap" AcceptsReturn="true" HorizontalAlignment="Center" VerticalAlignment="Center" IsEnabled="false" Text="{Binding Cookie}"/>
		<Button Content="Ottieni un nuovo biscotto" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding Click}" IsEnabled="{Binding Continua}"/>
		<TextBlock Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="{Binding Message}"/>
</StackPanel>
</UserControl>
